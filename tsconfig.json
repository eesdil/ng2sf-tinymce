{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"outDir":"dist/",
		"declaration": true
	},
	"awesomeTypescriptLoaderOptions": {
		"resolveGlobs": true,
		"forkChecker": true
	},
	"exclude": [
		"typings/main.d.ts",
		"typings/main",
		"node_modules"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": { "rewriteTsconfig": false }
}
